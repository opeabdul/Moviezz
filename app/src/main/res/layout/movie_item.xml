<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<data>
    <variable
        name="movie"
        type="com.opeabdul.moviezz.model.Movie" />
</data>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/card_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/movie_image"
            android:layout_width="@dimen/movie_image_width"
            android:layout_height="@dimen/movie_image_height"
            app:loadImg="@{movie.posterPath}"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/movie_title"
            app:layout_constraintHorizontal_chainStyle="spread_inside"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/movie_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Movie Title"
            android:text="@{movie.title}"
            android:textColor="@color/purple_200"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@id/movie_rating"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/movie_image"
            app:layout_constraintHorizontal_chainStyle="spread_inside"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/movie_rating"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:text="97"
            android:text="@{String.valueOf(movie.popularity)}"
            android:textColor="@color/teal_200"
            android:textSize="14sp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toStartOf="@id/movie_genre"
            app:layout_constraintStart_toEndOf="@id/movie_title"
            app:layout_constraintBottom_toBottomOf="@id/movie_image"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/movie_genre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Drama"
            android:text="@{movie.originalLanguage}"
            android:textColor="@color/purple_200"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/movie_rating"
            app:layout_constraintBottom_toBottomOf="@id/movie_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
</layout>